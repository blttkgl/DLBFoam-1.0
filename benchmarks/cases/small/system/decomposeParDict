FoamFile
{
    version         2;
    format          ascii;
    class           dictionary;
    note            "mesh decomposition control dictionary";
    object          decomposeParDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

nProc           8;

numberOfSubdomains $nProc;

method          hierarchical;

hierarchicalCoeffs
{
    n               ( $nProc 1 1 );
    delta           0.001;
    order           xyz;
}

cellsPerCore    20;


